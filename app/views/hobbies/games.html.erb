<div class="container">
  <div class="row">
    <div class="col">
      <nav class="navbar navbar-expand">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <div class="navigation">
            <ul class="nav flex-column">
              <li><%= link_to "Games", games_path, class:"fas fa-gamepad nav-link text-light" %></li>
              <li><%= link_to "Sports", sports_path, class:"fas fa-basketball-ball nav-link text-light" %></li>
              <li><%= link_to "Movies", movies_path, class:"fas fa-film nav-link text-light" %></li>
              <li><%= link_to "Sightseeing", sightseeing_path, class:"fas fa-plane nav-link text-light" %></li>
              <li><%= link_to "Books", books_path, class:"fas fa-book-open nav-link text-light" %></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div class="col-md-6 mt-1">
      <h1 class="text-center">投稿してみよう！</h1>
      <%= form_with model:@hobby, url:'/hobbies', local:true do |f| %>
        <div class="text-center">
          <%= f.text_field :title, placeholder:"投稿タイトル", class:"bg-transparent"%>
          <%= f.text_field :name, placeholder:"作品名", class:"bg-transparent" %>
        </div>
        <div class="text-center m-3">
          <%= f.text_field :good_part, placeholder:"良いところ", class:"bg-transparent" %>
          <%= f.text_field :bad_part, placeholder:"悪いところ", class:"bg-transparent"%>
        </div>
        <div class="text-center">
          <%= f.text_area :introduction, placeholder:"本文", size: "40x5", class:"bg-transparent" %>
        </div>
        <div class="text-right">
          <input type="submit" name"commit" value="投稿" class="btn btn-primary" data-disable="Create Hobby" />
        </div>
      <% end %>
      <% @hobbies.each do |hobby| %>
        <div class="text-center mb-5">
          <%= hobby.title %>
          <%= hobby.name %>
          <%= hobby.good_part %>
          <%= hobby.bad_part %>
          <%= hobby.introduction %>
        </div>
      <% end %>
    </div>
    <div class="col">
      <h1>おすすめ</h1>
    </div>
  </div>
</div>