<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/sidebar" %>
    </div>
    <div class="col-md-6">

      <!-- ユーザー情報 -->
      <div class="border-left border-right p-3">
        <div class="ml-5 d-flex justify-content-between">
          <%= link_to user_path(@hobby.user.id) do %>
            <%= attachment_image_tag @hobby.user, :profile_image, size: "50x50", fallback: "user-gf1c075314_1280.png", class:"rounded-circle" %>
            <strong><p class="text-dark"><%= @hobby.user.name %></p></strong>
          <% end %>
          <p id="hobby-rate-<%=@hobby.id %>">
            初心者おすすめ度
          </p>
        </div>

        <!-- 投稿内容 -->
        <div class="text-right">
          <% if @hobby.favorited_by?(current_user) %>
            <%= link_to hobby_favorites_path(@hobby), method: :delete do %>
              <i class="btn btn-light fas fa-bookmark"></i>
            <% end %>
          <% else %>
            <%= link_to hobby_favorites_path(@hobby), method: :post do %>
              <i class="btn btn-light far fa-bookmark"></i>
            <% end %>
          <% end %>
        </div>
        <div class="text-center">
          <strong><h2>【<%= @hobby.name %>】</h2></strong>
        </div>
        <div class="d-flex justify-content-around">
          <h3>良い点</h3><h3>悪い点</h3>
        </div>
        <div class="d-flex justify-content-around">
          <p><strong><%= @hobby.good_part %></strong></p><p><strong><%= @hobby.bad_part %></strong></p>
        </div>
        <div class="d-flex justify-content-center">
          <%= attachment_image_tag @hobby, :image, format: 'jpg', size: "300x250" %>
        </div>
        <div class="d-flex justify-content-center mb-6">
          <strong><%= @hobby.introduction %></strong>
        </div>
      </div>

      <!-- コメント機能 -->
      <div class="p-3 border-top border-left border-right">
        <p>コメント数：<%= @hobby.comments.count %></p>
        <div class="commentsArea">
          <%= render "comments/comment", hobby: @hobby %>
        </div>
        <div class="text-center">
          <%= form_with(model:[@hobby, @comment] ) do |f| %>
            <%= f.text_area :comment, rows:'5', placeholder:"コメント", size: "40x5", class:"inputComment bg-transparent" %>
            <%= f.submit "送信", class:" btn btn-success rounded-pill" %>
          <% end %>
        </div>
      </div>
    </div>
    <script>
      $('#hobby-rate-<%= @hobby.id %>').raty({
        size: 36,
        half: true,
        readOnly: true,
        score: "<%= @hobby.rate %>",
        path: '/assets/'
      });
    </script>

    <div class="col">
      <h1>おすすめ</h1>
    </div>
  </div>
</div>