<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/sidebar" %>
    </div>
    <div class="col-md-6 mt-1">
      <h1 class="text-center">ブックマーク一覧</h1>
      <table class="table">
        <thead>
          <tr>
            <th>投稿者</th>
            <th>投稿タイトル</th>
            <th>ホビー</th>
            <th>カテゴリー</th>
          </tr>
        </thead>
        <tbody>
          <% @favorites.each do |favorite| %>
            <tr>
              <td>
                <%= link_to user_path(favorite.hobby.user.id) do %>
                  <%= attachment_image_tag favorite.hobby.user, :profile_image, size: "50x50", fallback: "user-gf1c075314_1280.png", class:"rounded-circle" %>
                <% end %><br>
                <%= favorite.hobby.user.name %>
              </td>
              <td>
                <%= link_to hobby_path(favorite.hobby), class:"text-dark" do %>
                  <%= favorite.hobby.title %>
                <% end %>
              </td>
              <td><%= favorite.hobby.name %></td>
              <td><%= favorite.hobby.category %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col">
      <h1>おすすめ</h1>
    </div>
  </div>
</div>