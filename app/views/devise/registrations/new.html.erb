<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <h2 class="text-center">Sign up</h2>
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field text-center">
          <div class="text-center">
            <%= render 'layouts/error_messages', model: f.object %>
          </div>
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field text-center">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field text-center">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(半角＋数字<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field text-center mb-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="text-center">
          <div class="mb-3">
            <%= f.submit "Sign up", class:"btn btn-light btn-lg text-dark rounded-pill" %>
          </div>
          <div>
            <%= link_to new_user_session_path do %>
              <h2 class="btn btn-light btn-lg text-dark rounded-pill">ログイン画面</h2>
            <% end %>
          </div>
        </div>
      <% end %>

      <%# render "devise/shared/links" %>
    </div>
  </div>
</div>
