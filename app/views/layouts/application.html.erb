<!DOCTYPE html>
<html>
  <head>
    <title>Seeking</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
        body {background-color: gray;}
        header {background-color: black;}
        footer {background-color: black;}
    </style>
  </head>
  <body>
    <% if user_signed_in? %>
    <header class="sticky-top">
      <div class="container">
        <div class="row">
          <div class="col d-flex">
            <div>
              <a class="logo" href="/"><span><%= image_tag '0B607AFF-A933-4ACF-A24B-964CD5A55EE6.png', size: '100x60' %></span></a>
            </div>
            <div class="mx-auto">
              <nav class="navbar navbar-expand">
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                  <div class="navigation">
                    <ul class="navbar-nav ml-auto mt-2">
                      <li><%= link_to "Games", games_path, class:"fas fa-gamepad nav-link text-light" %></li>
                      <li><%= link_to "Sports", sports_path, class:"fas fa-basketball-ball nav-link text-light" %></li>
                      <li><%= link_to "Movies", movies_path, class:"fas fa-film nav-link text-light" %></li>
                      <li><%= link_to "Sightseeing", sightseeing_path, class:"fas fa-plane nav-link text-light" %></li>
                      <li><%= link_to "Books", books_path, class:"fas fa-book-open nav-link text-light" %></li>
                    </ul>
                  </div>
                </div>
              </nav>
            </div>
            <div class="float-right mt-3">
              <%= render 'layouts/form', hobby: @hobby, user: @user %>
            </div>
          </div>
        </div>
      </div>
    </header>
    <% end %>
    <%= yield %>
  </body>
</html>
